# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/drivigo_db

# JWT Secret for Authentication
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# MapBox Configuration
MAPBOX_TOKEN=your_mapbox_access_token_here

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Configuration (Gmail SMTP)
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notification VAPID Keys
# Generate these using: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Internal API Key for scheduled tasks
INTERNAL_API_KEY=your_internal_api_key_for_cron_jobs

# Node Environment
NODE_ENV=development

# Server Port
PORT=5000

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Session Secret
SESSION_SECRET=your_session_secret_key

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_DIR=uploads/

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log